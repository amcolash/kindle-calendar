{
  "compilerOptions": {
    "baseUrl": "./src",
    "jsx": "react",
    "moduleResolution": "Node",
    "paths": {
      "~*": ["./*"]
    },
    "strict": true,
    "target": "ES2015",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["ES2017", "DOM"],
    "module": "ES2020"
  },
  "include": ["src/**/*"]
}
